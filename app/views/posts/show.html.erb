<div class="blog-wrapper">
	<div class="container shadow blog-container">
		<h1 class="text-center"><%= link_to @post.title, blog_path, class:'blog-title' %></h1>
		<h6 class="text-center">Posted by @author <%= @post.created_at.strftime("at %I:%M %p on %b %e, %Y") %>
		</h6>
		<hr>

		<div class="text-justify blog-body">
			<%= @post.body %>
		</div>
	</div>
</div>